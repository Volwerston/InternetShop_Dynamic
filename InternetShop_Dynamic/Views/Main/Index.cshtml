                    headers: {
                        Authorization: 'Bearer ' + getCookie('access_token')
                    },
                    success: function () {
                        document.cookie = 'access_token=; expires=Thu, 01 Jan 1970 00:00:01 GMT;';
                        window.location.href = '@Url.Action("Index", "Main")';
                    },
                    error: function (res) {
                        alert(res.responseText);
                    }
                });

            });
        });
